<%- include ("includes/header") %>
<div style="margin-left: 30px; ">
	<p style="color: blue;"><b>updateProfile</b></p>
</div>
<section>
	<div class="feature-photo">

		<figure>
			<img class="cover-photo" id="cover-photo" style="width: 100%; height: 700px; object-fit: cover;" src = "<%=user.coverimgUrl%>" />
		</figure>

		<form class="edit-phto" action="/uploadCover" method="post" enctype="multipart/form-data">
			<i class="fa fa-camera-retro"></i>
			<label class="fileContainer">
				Edit Cover Photo
				<input type="file" name="coverPhoto" required />
			</label>
			<button type="submit" class="mtr-btn" name="submit">
				<span>Save</span>
			</button>
		</form>

		<div class="container-fluid">
			<div class="row merged">
				<div class="col-md-2">
					<div class="user-avatar">
						<figure>

							<img class="profile-image" id="profile-image" style="width: 100%; height: 250px; object-fit: cover;" src = "<%=user.profileimgUrl%>" />

							<form class="edit-phto" action="/uploadProfile" method="post" enctype="multipart/form-data">
								<i class="fa fa-camera-retro"></i>
								<label class="fileContainer">
									Edit Profile Picture
									<input type="file"  name="profileImage"  required />
								</label>
								<button type="submit" class="mtr-btn" name="submit">
									<span>Save</span>
								</button>
							</form>
						</figure>
					</div>
				</div>
				<div class="col-md-10">
					<div class="timeline-info">
						<ul>
							<li class="admin-name">
								<h5 class="user-name" style="padding-top: 20px; padding-bottom: 20px;"><%=user.name%></h5>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



<section>
	<div class="gap gray-bg">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="row" id="page-contents">

						<div class="col-md-3">
                            <%- include ("includes/left-sidebar") %>
						</div>

						<div class="col-md-6">
							<div class="central-meta">
								<div class="editing-info">

									<h5 class="f-title">
										<i class="ti-info-alt"></i>
										Update Profile
									</h5>

									<form action="/updateInfo" method="post">
										<div class="form-group">
											<input type="text" required class="name" name="name" value="<%=user.name%>"/>
											<label class="control-label">Full Name</label>
											<i class="mtrl-select"></i>
										</div>

										<br><br>

										<div class="form-group">
											<input type="email" class="email" name="email" value="<%=user.email%>"/>
											<label class="control-label">Email</label>
											<i class="mtrl-select"></i>
										</div>

										<br><br>

										<div class="form-group">
											<input type="text" class="dob" name="dob" placeholder="DD/MM/YYYY" value="<%=user.dob%>"/>
											<label class="control-label">Date of birth</label>
											<i class="mtrl-select"></i>
										</div>

										<br><br>

										<div class="form-group">	
											<input type="text" class="city" name="city" value="<%=user.city%>" />
											<label class="control-label">City</label>
											<i class="mtrl-select"></i>
										</div>

										<br><br>

										<div class="form-group">
											<input type="text" class="country" name="country" value="<%=user.country%>" />
											<label class="control-label">Country</label>
											<i class="mtrl-select"></i>
										</div>

										<br><br>

										<div class="form-group">	
											<input type="text" class="about" name="about" value="<%=user.about%>" />
											<label class="control-label">About Me</label>
											<i class="mtrl-select"></i>
										</div>

										<button type="submit" class="mtr-btn" name="submit">
											<span>Save</span>
										</button>
									</form>
								</div>
							</div>
						</div>

						<div class="col-md-3">
                            <%- include ("includes/right-sidebar") %>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<%- include ("includes/footer") %>